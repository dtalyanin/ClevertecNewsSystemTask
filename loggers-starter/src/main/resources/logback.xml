<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>

    <logger name="ru.clevertec.news.dao" level="DEBUG">
        <appender-ref ref="STDOUT"/>
    </logger>

    <logger name="ru.clevertec.news.services" level="INFO">
        <appender-ref ref="STDOUT"/>
    </logger>

    <logger name="ru.clevertec.users.dao" level="DEBUG">
        <appender-ref ref="STDOUT"/>
    </logger>

    <logger name="ru.clevertec.users.services" level="INFO">
        <appender-ref ref="STDOUT"/>
    </logger>
</configuration>